    <title>Conference Banner Animation</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: transparent;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .banner-container {
            width: 100%;
            max-width: 400px;
            padding: 60px 40px;
            position: relative;
        }

        .words-container {
            width: 100%;
            position: relative;
            height: 450px;
            overflow: hidden;
            mask-image: linear-gradient(
                to bottom,
                transparent 0%,
                rgba(0, 0, 0, 0.3) 15%,
                rgba(0, 0, 0, 0.8) 35%,
                black 50%,
                rgba(0, 0, 0, 0.8) 65%,
                rgba(0, 0, 0, 0.3) 85%,
                transparent 100%
            );
            -webkit-mask-image: linear-gradient(
                to bottom,
                transparent 0%,
                rgba(0, 0, 0, 0.3) 15%,
                rgba(0, 0, 0, 0.8) 35%,
                black 50%,
                rgba(0, 0, 0, 0.8) 65%,
                rgba(0, 0, 0, 0.3) 85%,
                transparent 100%
            );
        }

        .tile {
            position: absolute;
            width: 100%;
            background: #122345;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 8px;
            padding: 20px 30px;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-sizing: border-box;
        }

        .word {
            font-family: 'Montserrat', sans-serif;
            font-size: 38px;
            font-weight: 300;
            color: #ffffff;
        }

        @media (max-width: 480px) {
            .banner-container {
