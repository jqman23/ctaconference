<body>
    <div class="banner-container">
        <div class="words-container" id="container">
            <!-- Tiles will be dynamically positioned here -->
        </div>
    </div>

    <script>
        const words = ['creativity', 'innovation', 'imagination', 'collaboration', 'transformation'];
        const container = document.getElementById('container');
        const tileHeight = 80;
        const gap = 8;
        const tileSpacing = tileHeight + gap; // Total space one tile occupies
        const speed = 30; // pixels per second
        const totalCycleHeight = tileSpacing * words.length; // Height for one complete cycle
        
        let offset = 0; // This accumulates forever
        let tiles = [];
        
        // Create tiles
        words.forEach((word, index) => {
            const tile = document.createElement('div');
            tile.className = 'tile';
            const wordDiv = document.createElement('div');
            wordDiv.className = 'word';
            wordDiv.textContent = word;
            tile.appendChild(wordDiv);
            container.appendChild(tile);
            tiles.push({ element: tile, baseIndex: index });
        });
        
        let lastTime = performance.now();
        
        function animate(currentTime) {
            const deltaTime = (currentTime - lastTime) / 1000; // Convert to seconds
            lastTime = currentTime;
            
            // Increment offset - this never resets, just keeps growing
            offset += speed * deltaTime;
            
            // Position each tile based on current offset
            tiles.forEach((tile, i) => {
                // Calculate this tile's position in the infinite scroll
                const basePosition = i * tileSpacing;
                const currentPosition = basePosition - (offset % totalCycleHeight);
                
                // Wrap position to create seamless loop
                let wrappedPosition = currentPosition;
                if (wrappedPosition < -tileHeight - gap) {
                    wrappedPosition += totalCycleHeight;
                }
                if (wrappedPosition > container.offsetHeight + gap) {
                    wrappedPosition -= totalCycleHeight;
                }
                
                tile.element.style.transform = `translateY(${wrappedPosition}px)`;
            });
            
            requestAnimationFrame(animate);
        }
        
        // Start animation
        requestAnimationFrame(animate);
    </script>
</body>
</html>
